    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% flash.each do |product, message| %>
  <p><%= message %></p>
  <% end %>
    <a href="/">Home</a>
    <a href="/products/new">New Product</a>
    <%= yield %>
  </body>
</html>
