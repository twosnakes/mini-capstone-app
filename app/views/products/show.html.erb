

<p><%= @product.id %> </p>
<h1><%= @product.name %></h1>
<h4><%= @product.description %></h4>
<h3><%= @product.price %></h3>
<p>Price: <%= number_to_currency(@product.price) %></p>
<p class=" <%= "red-price" if @product.discounted? %>">Price: <%= number_to_currency(@product.price) %></p>
<p>Tax <%= number_to_currency(@product.tax) %></p>
<h3><%= @product.sale_message %></h3>
<h3><%= @product.supplier.name %></h3>
<img src= <%= @product.first_image_url %>>
<h5>Last Updated On: <%= @product.friendly_updated_at %></h5>
<h5><%= @product.supplier.name %></h5>
<a href="/products/<%= @product.id %>/edit">Edit Product</a>

<%= link_to "Delete", "/products/#{ @product.id }", method: :delete %>



<%= form_tag "/orders", method: :post do %>
<h1> Sign Up </h1>


 
  <%= text_field_tag :quantity,  nil, placeholder: "Quantity" %>
  <%= label_tag :product_id %>
  <%= hidden_field_tag :product_id, @product.id %>

<div>
<%= submit_tag "Buy Now", class "btn btn-primary" %>
</div>

<% end %>

